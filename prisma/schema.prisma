generator client {
  provider = "prisma-client-js"
  // output   = "data"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Orders {
  id        String    @id @default(uuid())
  nameCs    String
  orderTime DateTime?
  sendTime  DateTime?
  desc      String
  address   String

  // travel
  Deliverys     Deliverys? @relation(fields: [id_delivery], references: [id])
  id_delivery   String?
  nameDelivery  String
  phoneDelivery String
  priceDelivery Int

  // payment
  Payments     Payments? @relation(fields: [id_payment], references: [id])
  id_payment   String?
  totalPayment Int // for product
  totalAll     Int

  // at update / create
  status       String
  OrderProduct OrderProduct[]
  Receiver     Receiver       @relation(fields: [id_receiver], references: [id])
  id_receiver  String
  created_at   DateTime       @default(now())
  updated_at   DateTime       @updatedAt
}

model Receiver {
  id      String   @id @default(uuid())
  name    String
  address String
  phone   String
  Orders  Orders[]
}

model OrderProduct {
  id         String   @id @default(uuid())
  Order      Orders?   @relation(fields: [id_order], references: [id])
  id_order   String?
  Product    Products @relation(fields: [id_product], references: [id])
  id_product String
  qty        Int

  Users   Users?  @relation(fields: [id_user], references: [id])
  id_user String?
}

model Products {
  id           String         @id @default(uuid())
  name         String
  location     String
  type         String
  img          String
  price        Int
  qty          Int
  desc         String
  // at update / create
  created_at   DateTime       @default(now())
  updated_at   DateTime       @updatedAt
  OrderProduct OrderProduct[]
}

model Deliverys {
  id         String   @id @default(uuid())
  name       String
  phone      String
  address    String
  type       String
  price      Int
  img        String
  desc       String
  Orders     Orders[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Payments {
  id         String   @id @default(uuid())
  name       String
  phone      String
  accounting String
  address    String
  type       String
  img        String
  desc       String
  Orders     Orders[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Users {
  id           String         @id @default(uuid())
  name         String
  phone        String
  address      String
  OrderProduct OrderProduct[]
}
