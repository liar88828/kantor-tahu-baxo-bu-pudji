generator client {
  provider = "prisma-client-js"
  output   = "data"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model semuaProduct {
  id         String   @id @default(uuid())
  nama       String   @db.VarChar(100)
  lokasi     String   @db.VarChar(100)
  jenis      String   @db.VarChar(100)
  img        String   @db.VarChar(100)
  harga      Int?     @db.MediumInt
  jumlah     Int?     @db.MediumInt
  keterangan String   @db.Text
  // at update / create
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  // relational
  Orderan    Orderan? @relation(fields: [orderanId], references: [id])
  orderanId  String?
}

model Orderan {
  // orang
  pengirim          String         @db.VarChar(100)
  hpPengirim        String         @db.VarChar(20)
  penerima          String         @db.VarChar(100)
  alamatPenerima    String         @db.VarChar(100)
  hpPenerima        String         @db.VarChar(100)
  // tanggal
  pesan             DateTime?      @db.Date
  kirim             DateTime?      @db.Date
  waktuKirim        DateTime?      @db.Date
  // keterangan
  guna              String         @db.Text
  keterangan        String         @db.Text
  lokasi            String         @db.VarChar(100)
  // travel
  namaPengiriman    String         @db.VarChar(100)
  ekspedisi         String         @db.VarChar(100)
  ongkir            Int?           @db.MediumInt
  // total
  id                String         @id @default(uuid())
  no                String         @db.VarChar(100)
  typePembayaran    String         @db.VarChar(100)
  total             Int?           @db.MediumInt
  totalBayar        Int?           @db.MediumInt
  totalPenjualan    Int?           @db.MediumInt
  status            String         @db.VarChar(20)
  // semua
  semuaHargaProduct Int?           @db.MediumInt
  semuaHargaItem    Int?           @db.MediumInt
  semuaHargaOrderan Int?           @db.MediumInt
  totalHarga        Int?           @db.MediumInt
  // relational /orderan
  semuaProduct      semuaProduct[]
  // at update / create
  created_at        DateTime       @default(now())
  updated_at        DateTime       @updatedAt
}

model produk {
  id         String   @id @default(uuid())
  nama       String   @db.VarChar(100)
  lokasi     String   @db.VarChar(100)
  jenis      String   @db.VarChar(100)
  img        String   @db.VarChar(100)
  harga      Int?     @db.MediumInt
  jumlah     Int?     @db.MediumInt
  keterangan String   @db.Text
  // at update / create
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model travel {
  id             String @id @default(uuid())
  namaPengiriman String
  noHpPerusahaan String
  lokasi         String
  jenis          String
  harga          Int    @db.MediumInt
  img            String
  keterangan     String @db.Text
}
