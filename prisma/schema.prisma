generator client {
  provider = "prisma-client-js"
  // output   = "data"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Orders {
  id             String    @id @default(uuid())
  // orang
  pengirim       String
  hpPengirim     String
  penerima       String
  alamatPenerima String
  hpPenerima     String
  // tanggal
  pesan          DateTime?
  kirim          DateTime?
  // keterangan
  guna           String
  lokasi         String
  // travel
  namaPengiriman String
  ongkir         Int
  // total
  typePembayaran String
  totalBayar     Int
  totalPenjualan Int
  status         String
  // semua

  // at update / create

  created_at  DateTime       @default(now())
  updated_at  DateTime       @updatedAt
  Transaction Transactions[]
  Deliverys   Deliverys?     @relation(fields: [id_delivery], references: [id])
  id_delivery String?
  Banks       Payments?      @relation(fields: [id_payment], references: [id])
  id_payment  String?
}

model Transactions {
  id         String    @id @default(uuid())
  Order      Orders?   @relation(fields: [id_order], references: [id])
  id_order   String?
  Product    Products? @relation(fields: [id_product], references: [id])
  id_product String?
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
}

model Products {
  id          String         @id @default(uuid())
  nama        String
  lokasi      String
  jenis       String
  img         String
  harga       Int
  jumlah      Int
  keterangan  String
  // at update / create
  created_at  DateTime       @default(now())
  updated_at  DateTime       @updatedAt
  Transaction Transactions[]
}

model Deliverys {
  id         String   @id @default(uuid())
  nama       String
  hp         String
  lokasi     String
  jenis      String
  harga      Int
  img        String
  keterangan String
  Orders     Orders[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Payments {
  id         String   @id @default(uuid())
  nama       String
  hp         String
  no         String
  lokasi     String
  jenis      String
  img        String
  keterangan String
  Orders     Orders[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
